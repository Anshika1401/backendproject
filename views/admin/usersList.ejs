<div class="row">
    <div class="col-12">
        <h2 class="mb-4" style="color:#00c8b0; text-shadow:0 0 8px rgba(0,200,176,0.4);">Registered Users</h2>
        
        <%- include('../partials/flashMessages') %>

        <div class="card shadow-sm" style="background-color:#1c222a; border:none;">
            <div class="card-body">
                <% if (users && users.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table align-middle mb-0" style="color:#d0d4da;">
                            <thead>
                                <tr style="background-color:#161b22; color:#00c8b0;">
                                    <th>#</th>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Points</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach((u, index) => { %>
                                    <tr style="background-color:<%= index % 2 === 0 ? '#1c222a' : '#161b22' %>;">
                                        <td><%= index + 1 %></td>
                                        <td class="text-muted"><%= u.id %></td>
                                        <td><%= u.username %></td>
                                        <td><%= u.email %></td>
                                        <td>
                                            <span class="badge rounded-pill <%= u.role === 'admin' ? 'bg-danger' : 'bg-primary' %>">
                                                <%= u.role %>
                                            </span>
                                        </td>
                                        <td class="text-success"><%= u.points %></td>
                                        <td>
                                            <a href="/admin/users/edit/<%= u.id %>" class="btn btn-sm btn-outline-primary me-2">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            
                                            <!-- Delete Button triggers modal -->
                                            <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= u.id %>">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>

                                            <!-- Delete Modal -->
                                            <div class="modal fade" id="deleteModal<%= u.id %>" tabindex="-1" aria-labelledby="deleteModalLabel<%= u.id %>" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content" style="background-color:#1c222a; color:#d0d4da;">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="deleteModalLabel<%= u.id %>">Confirm Delete</h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure you want to delete <strong><%= u.username %></strong>? This action cannot be undone.
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <form action="/admin/users/delete/<%= u.id %>" method="POST" style="display:inline;">
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="alert alert-warning mt-3">No registered users found in the database.</div>
                <% } %>
            </div>
        </div>
    </div>
</div>
